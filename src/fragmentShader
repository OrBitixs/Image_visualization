#version 450 core
in vec4 vertexColor;
in vec2 TexCoord;

out vec4 FragColor;

uniform vec4 blendColor;
uniform sampler2D texture1;
uniform sampler2D texture2;

void main()
{
   FragColor = mix(texture(texture2, TexCoord), texture(texture1, TexCoord) * vec4(vertexColor.x*blendColor.x, vertexColor.y*blendColor.y, vertexColor.z*blendColor.z, vertexColor.w*blendColor.w), 0.5);
}
