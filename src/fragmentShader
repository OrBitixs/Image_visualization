#version 450 core
in vec4 vertexColor;
in vec2 TexCoord;

out vec4 FragColor;

uniform vec4 blendColor;
uniform sampler2D curTexture;

void main()
{
   FragColor = texture(curTexture, TexCoord) * vec4(vertexColor.x*blendColor.x, vertexColor.y*blendColor.y, vertexColor.z*blendColor.z, vertexColor.w*blendColor.w);
}
